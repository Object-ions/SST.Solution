@{
  Layout = "_Layout";
}

@using SST.Models;

<div class="main-container">
  <h2>Flavors</h2>
  <hr/>

  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added yet!</h3>
    @Html.ActionLink("Add a treat", "Create", "Treats")
  }
  else
  {
    <ol>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ol>
  }

  <div class="btm-bar">
    @Html.ActionLink("Add a flavor", "Create")
  </div>
</div>